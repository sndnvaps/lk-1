LOCAL_DIR := $(GET_LOCAL_DIR)

MODULE := $(LOCAL_DIR)

GLOBAL_INCLUDES += \
	$(LOCAL_DIR)/include

PLATFORM := msm8226

MEMBASE ?= 0x07F00000 # SDRAM
MEMSIZE := 0x00100000 # 1MB

BASE_ADDR        := 0x00000

TAGS_ADDR        := BASE_ADDR+0x00000100
KERNEL_ADDR      := BASE_ADDR+0x00008000
RAMDISK_ADDR     := BASE_ADDR+0x01000000
SCRATCH_ADDR     := 0x10000000
SCRATCH_ADDR_128MAP     := 0x04200000
SCRATCH_ADDR_512MAP     := 0x10000000
SCRATCH_SIZE_128MAP     := 0x03D00000
SCRATCH_SIZE_512MAP     := 0x20000000

GLOBAL_DEFINES += DISPLAY_SPLASH_SCREEN=1
GLOBAL_DEFINES += DISPLAY_TYPE_MIPI=1
GLOBAL_DEFINES += DISPLAY_TYPE_DSI6G=1

MODULE_DEPS += \
	dev/keys \
	lib/ptable \
	dev/pmic/pm8x41 \
	dev/gcdb/display \
	dev/vib \
	lib/libfdt

GLOBAL_DEFINES += \
	MEMSIZE=$(MEMSIZE) \
	MEMBASE=$(MEMBASE) \
	BASE_ADDR=$(BASE_ADDR) \
	TAGS_ADDR=$(TAGS_ADDR) \
	KERNEL_ADDR=$(KERNEL_ADDR) \
	RAMDISK_ADDR=$(RAMDISK_ADDR) \
	SCRATCH_ADDR=$(SCRATCH_ADDR) \
	SCRATCH_ADDR_128MAP=$(SCRATCH_ADDR_128MAP) \
	SCRATCH_ADDR_512MAP=$(SCRATCH_ADDR_512MAP) \
	SCRATCH_SIZE_128MAP=$(SCRATCH_SIZE_128MAP) \
	SCRATCH_SIZE_512MAP=$(SCRATCH_SIZE_512MAP)

ifneq ($(ENABLE_2NDSTAGE_BOOT),1)
MODULE_SRCS += \
    $(LOCAL_DIR)/target_display.c
endif

MODULE_SRCS += \
    $(LOCAL_DIR)/init.c \
    $(LOCAL_DIR)/meminfo.c \
    $(LOCAL_DIR)/oem_panel.c

include make/module.mk
